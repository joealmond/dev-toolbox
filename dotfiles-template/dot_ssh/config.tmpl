# SSH configuration
# Managed by chezmoi - edit in dotfiles repo

# NAS host via cloudflared tunnel
Host {{ .ssh.nas_host }}
    HostName {{ .ssh.nas_hostname }}
    User root
    Port 22
    ProxyCommand cloudflared access ssh --hostname {{ .ssh.cloudflared_tunnel }}
    IdentityFile ~/.ssh/id_ed25519
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Linux Mint host (local network)
Host {{ .ssh.mint_host }}
    HostName {{ .ssh.mint_hostname }}
    User mandulaj
    Port 22
    IdentityFile ~/.ssh/id_ed25519

# OCI host via Mint jump host
Host {{ .ssh.oci_host }}
    HostName {{ .ssh.oci_hostname }}
    User ubuntu
    Port 22
    ProxyJump {{ .ssh.mint_host }}
    IdentityFile ~/.ssh/id_ed25519

# GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    AddKeysToAgent yes

# Default settings for all hosts
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentitiesOnly yes
