# Bash aliases
# Managed by chezmoi - edit in dotfiles repo

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Listing
alias ll='ls -lah'
alias la='ls -A'
alias l='ls -CF'

# Git shortcuts
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'
alias gco='git checkout'
alias gb='git branch'
alias glg='git log --oneline --graph --decorate --all'

# Docker/Podman
alias d='docker'
alias dc='docker-compose'
alias dps='docker ps'
alias di='docker images'

# PM2
alias pm2l='pm2 list'
alias pm2s='pm2 status'
alias pm2r='pm2 restart'
alias pm2log='pm2 logs'

# Ollama
alias ol='ollama list'
alias ops='ollama ps'

# Dev shortcuts
alias dev='cd /workspaces/dev01'
alias reload='source ~/.bashrc'

# Safety
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Useful utilities
alias h='history'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias nowdate='date +"%Y-%m-%d"'

# Network
alias myip='curl -s ifconfig.me'
alias ports='netstat -tulanp'

# Processes
alias psg='ps aux | grep -v grep | grep -i -e VSZ -e'
alias meminfo='free -m -l -t'
alias psmem='ps auxf | sort -nr -k 4'
alias pscpu='ps auxf | sort -nr -k 3'
