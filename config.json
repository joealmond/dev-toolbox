{
  "ollama": {
    "defaultModel": "qwen2.5-coder:7b",
    "availableModels": [
      "qwen2.5-coder:7b",
      "qwen2.5-coder:3b",
      "qwen2.5-coder:14b",
      "deepseek-coder-v2:16b",
      "codellama:7b",
      "codellama:13b"
    ],
    "timeout": 300000,
    "retryAttempts": 3,
    "retryDelay": 5000
  },
  "processing": {
    "concurrency": 1,
    "watchDebounce": 1000,
    "moveDelay": 500
  },
  "folders": {
    "todo": "backlog/todo",
    "doing": "backlog/doing",
    "failed": "backlog/failed",
    "review": "backlog/review",
    "completed": "backlog/completed",
    "repos": "repos",
    "adr": "docs/adr",
    "worklogs": "docs/worklogs",
    "specArchive": "docs/specs",
    "changelog": "docs/CHANGELOG.md"
  },

  "spec": {
    "enabled": true,
    "requirementsPromptTemplate": "Based on the following requirements, implement the solution:\n\n{requirements}",
    "architectureContextEnabled": true
  },

  "documentation": {
    "enabled": true,
    "generator": {
      "model": "qwen2.5-coder:7b",
      "timeout": 60000
    },
    "templates": {
      "worklog": "templates/worklog.md",
      "adr": "templates/adr.md",
      "changelog": "templates/changelog-entry.md"
    },
    "defaults": {
      "generateWorklog": true,
      "generateAdr": false,
      "generateChangelog": true,
      "autoApprove": false
    }
  },

  "approval": {
    "defaultCodeApproval": true,
    "defaultDocsApproval": true,
    "notifyOnPending": true,
    "timeoutHours": 72,
    "autoRejectOnTimeout": false
  },

  "mcp": {
    "enabled": true,
    "port": 3002,
    "tools": [
      "create_task",
      "create_spec",
      "process_task",
      "approve_code",
      "approve_docs",
      "reject_task",
      "check_status",
      "list_pending",
      "query_search",
      "generate_adr",
      "append_changelog",
      "check_staleness"
    ]
  },

  "search": {
    "enabled": true,
    "indexPath": ".index/",
    "includePatterns": ["**/*.js", "**/*.ts", "**/*.md"],
    "excludePatterns": ["node_modules/**", ".git/**", ".index/**"],
    "maxFileSize": 100000,
    "rebuildOnStart": false
  },
  "webhook": {
    "enabled": true,
    "port": 3001,
    "path": "/webhook",
    "autoMergePR": true
  },
  "git": {
    "commitMessageFormat": "feat(task-{id}): {title}",
    "branchNameFormat": "task-{id}",
    "createPR": true,
    "prTitle": "[Task {id}] {title}",
    "prBody": "{description}\n\n## Acceptance Criteria\n{acceptanceCriteria}\n\n---\nProcessed by Kilo Code CLI with model: {model}",
    "pushRetries": 3,
    "pushRetryDelay": 2000
  },
  "logging": {
    "level": "info",
    "includeTimestamp": true,
    "colorize": true
  },
  "taskIdFormat": {
    "pattern": "task-{id}",
    "extractRegex": "task-(\\d+)"
  }
}
