{
  "name": "{{PROJECT_NAME}}",
  
  // Use the dev-toolbox Dockerfile for tooling (Alpine-based for Podman compatibility)
  // Replace {{TOOLING_ROOT}} with the absolute path to dev-toolbox
  "dockerFile": "{{TOOLING_ROOT}}/.devcontainer/Dockerfile",
  "context": "{{TOOLING_ROOT}}",
  
  // Your app is the main workspace - clean, no tooling files visible
  "workspaceFolder": "/workspaces/{{PROJECT_NAME}}",
  
  // Use workspaceMount instead of mounts array for workspace to avoid duplicate mount
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/{{PROJECT_NAME}},type=bind",
  
  "remoteUser": "node",
  
  // Podman + Docker compatibility
  "runArgs": [
    "--userns=keep-id",
    "--security-opt=label=disable",
    "--add-host=host.containers.internal:host-gateway",
    "--add-host=host.docker.internal:host-gateway"
  ],
  
  "mounts": [
    // Mount the entire tooling environment as one clean unit
    "source={{TOOLING_ROOT}},target=/opt/tooling,type=bind,readonly",
    
    // We need a writable backlog for task processing
    // This overmounts the read-only backlog from above
    "source={{TOOLING_ROOT}}/backlog,target=/opt/tooling/backlog,type=bind",
    
    // Shared agents - mounted to .github/agents so VS Code Copilot finds them
    "source={{TOOLING_ROOT}}/agents,target=/workspaces/{{PROJECT_NAME}}/.github/agents,type=bind,readonly",
    
    // SSH keys for git operations
    "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,readonly"
  ],
  
  "remoteEnv": {
    "OLLAMA_HOST": "http://host.containers.internal:11434",
    "OLLAMA_API_BASE": "http://host.containers.internal:11434",
    "TOOLING_HOME": "/opt/tooling",
    "PATH": "/opt/tooling/scripts:${containerEnv:PATH}"
  },
  
  "containerEnv": {
    "OLLAMA_HOST": "http://host.containers.internal:11434",
    "OLLAMA_API_BASE": "http://host.containers.internal:11434",
    "TOOLING_HOME": "/opt/tooling"
  },
  
  // Continue extension runs on HOST (not in container), so no container config needed for it
  // Run ./install/setup-continue-host.sh on your host machine to configure Continue
  "postCreateCommand": "bash /opt/tooling/scripts/ensure-configs.sh && cd /opt/tooling && npm install --prefix /opt/tooling 2>/dev/null || true",
  
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n",
        "code-runner.runInTerminal": true,
        "code-runner.saveFileBeforeRun": true,
        "dev.containers.dockerPath": "podman",
        "extensions.autoUpdate": true,
        "extensions.autoCheckUpdates": true
      },
      "extensions": [
        "continue.continue",
        "github.copilot",
        "github.copilot-chat",
        "dbaeumer.vscode-eslint",
        "formulahendry.code-runner"
      ]
    }
  },
  
  "portsAttributes": {
    "3000": {
      "label": "App Server",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Webhook Server",
      "onAutoForward": "silent"
    },
    "3002": {
      "label": "MCP Server", 
      "onAutoForward": "silent"
    }
  }
}
