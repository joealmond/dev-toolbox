{
  "name": "ticket-processor",
  "dockerFile": "./Dockerfile",
  "context": "..",
  "remoteUser": "node",
  "runArgs": [
    "--add-host", "host.docker.internal:host-gateway",
    "-v", "/var/run/docker.sock:/var/run/docker.sock"
  ],
  "mounts": [
    // Mount SSH keys from host for authentication (read-write so container can append SSH config)
    "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind"
    // Uncomment when host ~/.cloudflared exists (for SSH tunneling via cloudflared)
    // "source=${localEnv:HOME}/.cloudflared,target=/home/node/.cloudflared,type=bind,readonly"
  ],
  "forwardPorts": [3000, 3001],
  "postCreateCommand": "bash .devcontainer/setup-tools.sh",
  "remoteEnv": {
    "CHEZMOI_REPO": "https://git.mandulaj.stream/mandulaj/dev01-dotfiles.git"
  },
  "containerEnv": {
    "OLLAMA_HOST": "http://host.docker.internal:11434"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n"
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "github.vscode-pull-request-github",
        "dbaeumer.vscode-eslint",
        "kilocode.kilo-code"
      ]
    }
  }
}
