# =============================================
# Dev-Toolbox Environment Configuration
# =============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#   nano .env

# ---------------------------------------------
# Ollama Configuration
# ---------------------------------------------
# For macOS (Docker Desktop): use host.docker.internal
# For Linux (Podman): use host.containers.internal or 172.17.0.1
# For remote Ollama server: use the server IP (e.g., 192.168.0.10)
OLLAMA_HOST=http://host.containers.internal:11434
OLLAMA_API_BASE=http://host.containers.internal:11434

# Default model for code generation
# Recommended for RTX 3090: glmcoder (custom 48k context model)
OLLAMA_MODEL=glmcoder

# ---------------------------------------------
# Gitea Configuration (Optional)
# ---------------------------------------------
GITEA_URL=http://localhost:3000
GITEA_TOKEN=
GITEA_WEBHOOK_SECRET=webhook-secret-change-me
GITEA_SECRET_KEY=changeme-secret-key-please

# Admin user credentials (used during first-time setup)
GITEA_ADMIN_USER=admin
GITEA_ADMIN_PASSWORD=admin123
GITEA_ADMIN_EMAIL=admin@localhost

# Gitea organization/user for repositories
GITEA_ORG=dev-toolbox

# ---------------------------------------------
# Git Configuration
# ---------------------------------------------
GIT_USER_NAME=Dev-Toolbox
GIT_USER_EMAIL=devtoolbox@localhost

# ---------------------------------------------
# MCP Server
# ---------------------------------------------
MCP_ENABLED=true
MCP_PORT=3002

# ---------------------------------------------
# Webhook Server
# ---------------------------------------------
WEBHOOK_ENABLED=true
WEBHOOK_PORT=3001

# ---------------------------------------------
# Node Environment
# ---------------------------------------------
NODE_ENV=development

# ---------------------------------------------
# Logging
# ---------------------------------------------
LOG_LEVEL=info
LOG_COLORIZE=true

# ---------------------------------------------
# Remote Access (Optional)
# ---------------------------------------------
# If using Cloudflare Tunnel
# CLOUDFLARE_TUNNEL_ID=
# CLOUDFLARE_TUNNEL_SECRET=

# If using code-server
# CODE_SERVER_PASSWORD=your-secure-password

